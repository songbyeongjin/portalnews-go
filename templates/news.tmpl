<!DOCTYPE html>
<html lang="en">

<head>
{{template "header" .}}
</head>

<body id="page-top">
  {{template "navigation" .}}
  <section class="resume-section p-3 p-lg-5 d-flex justify-content-center" id="nate">
    <div class="w-100">
      <h2 class="mb-2">{{(index . 0).Portal}}</h2>

      {{ if eq (index . 0).Portal "nate"}}
        <button type="button" id="nate_refresh" class="btn btn-danger mb-2" onclick="window.location.href='/second/index#nate'">News Refresh</button>
      {{ else if eq (index . 0).Portal "naver"}}
        <button type="button" id="nate_refresh" class="btn btn-success mb-2" onclick="window.location.href='/second/index#nate'">News Refresh</button>
      {{ else }}
        <button type="button" id="nate_refresh" class="btn btn-primary mb-2" onclick="window.location.href='/second/index#nate'">News Refresh</button>
      {{ end }}

      {{range .}}
           <div class="resume-item d-flex flex-column flex-md-row justify-content-between mb-2">
             <div class="resume-content">
               <h5 class="mb-0" onclick="window.open('{{.Url | AddHttpsString}}', '_blank')">{{.Title}}</h5>
               <h5 class="mb-0" onclick="window.open('{{.Url | AddHttpsString}}', '_blank')">{{.TitleJapanese}}</h5>
               <div class="subheading cor">{{.Press}}</div>
               <p>{{.Content}}</p>
             </div>
             <div class="resume-date text-md-right">
               <span class="text-primary">{{.Date.Format "2006-01-02"}}</span>
             </div>
           </div>
      {{end}}
    </div>
  </section>
</body>

</html>